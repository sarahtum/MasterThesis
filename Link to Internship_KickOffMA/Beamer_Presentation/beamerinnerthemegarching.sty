\ProvidesPackage{beamerinnerthemegarching}

\useinnertheme[]{metropolis}

\RequirePackage{pgfopts}
\pgfkeys{/garching/inner/sectionpage/.cd,%
  .is choice,%
  none/.code=\metropolis@disablesectionpage,%
  simple/.code={\metropolis@enablesectionpage%
    \setbeamertemplate{section page}[simple]},%
  progressbar/.code={\metropolis@enablesectionpage%
    \setbeamertemplate{section page}[progressbar]},%
}%
\newcommand{\garching@inner@setdefaults}{%
  \pgfkeys{/garching/inner/.cd,%
    sectionpage=progressbar,%
%    subsectionpage=none,%
  }%
}%

%=== inner theme elements ===
% --- re-define the title page elements ---

\setbeamertemplate{title page}{
%\vspace*{10mm}
  \begin{minipage}[b][0.5\paperheight]{\textwidth}
    \ifx\inserttitle\@empty\else\usebeamertemplate*{title}\fi
    \ifx\insertsubtitle\@empty\else\usebeamertemplate*{subtitle}\fi
%    \vfill%
    \usebeamertemplate*{title separator}
  \end{minipage}

  \begin{minipage}[t][0.5\paperheight]{0.49\textwidth}
    \ifx\inserttitlegraphic\@empty\else\usebeamertemplate*{title graphic}\fi
    \vfill%
  \end{minipage}
  \begin{minipage}[t][0.5\paperheight]{0.49\textwidth}
  \ifx\beamer@shortauthor\@empty\else\usebeamertemplate*{author}\fi
    \ifx\insertdate\@empty\else\usebeamertemplate*{date}\fi
    \ifx\insertinstitute\@empty\else\usebeamertemplate*{institute}\fi
    \vfill
    \vspace*{1mm}
  \end{minipage}
}

% Zwischenfolien
\newcommand{\sectionframe}{%
  \begin{frame}[standout]
      \insertsectionnumber. \insertsectionhead
  \end{frame}
}%

\setbeamertemplate{itemize items}[triangle]

